<launch>

  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="/odom" />
  <arg name="use_sim_time" value="true"/>


  <!-- costmap -->
  <node pkg="costmap_2d" type="costmap_2d_node" name="costmap_node" output="screen">
    <rosparam file="$(find simulation_env)/param/local_costmap_params.yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
  </node>


  <!-- rviz -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find simulation_env)/rviz/rviz.rviz" >
  </node>

</launch>